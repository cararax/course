<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-8cyan(%d{HH:mm:ss:SSS}) %-4yellow(%-4.4level) - [%-5cyan(%-5.20thread)] %-40green(%-40.40logger) : %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>

